@model List<SystemManageOutCome.Data.Entities.Customers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card shadow mb-4">
        <div class="d-flex justify-content-between card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách khách hàng</h6>
            <button type="button" class="btn btn-primary" id="bt-edit">
                Thêm mới
            </button>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Họ tên</th>
                        <th scope="col">Số chứng minh nhân dân</th>
                        <th scope="col">Ngày giờ vào gần nhất</th>
                        <th scope="col">Ngày giờ ra gần nhất</th>
                        <th scope="col">Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.FullName</th>
                        <td>@item.CMT</td>
                        <td>@item.DateIn</td>
                        <td>@item.DateOut</td>
                        @{
                            var status = item.IsOut == 1 ? "Chưa ra" : "Đã ra";
                            <td>@status</td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <ul class="pagination">
            <li><a href="#">1</a></li>
            <li class="active"><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
        </ul>
    </div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    
</div>

@section scripts {
    <script>
        
        $('#bt-edit').click(() => {
            $.ajax({
            method : 'get',
            url: '@Url.Action("ShowEditView","Customer")',
           // context: document.body
        }).done(function (res) {
            $('#exampleModalCenter').html(res);
            $('#exampleModalCenter').modal('show');
        });
        });

       

    </script>
}



